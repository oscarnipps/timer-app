<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timerz" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/brand_primary_dark</item>
        <item name="colorPrimaryVariant">@color/brand_primary_dark_variant</item>
        <item name="colorSecondary">@color/brand_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/brand_secondary_dark_variant</item>
        <item name="colorOnPrimary">@color/brand_on_primary_color_dark</item>
        <item name="colorOnSecondary">@color/brand_on_secondary_color_dark</item>
        <item name="colorError">@color/brand_error_color_dark</item>
        <item name="colorOnError">@color/brand_on_error_color_dark</item>
        <item name="colorSurface">@color/brand_dark_surface</item>
        <item name="colorOnSurface">@color/brand_on_dark_surface</item>
        <item name="android:colorBackground">@color/brand_dark_background</item>
        <item name="colorOnBackground">@color/brand_on_dark_background</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>

        <!--system -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>

    </style>
</resources>